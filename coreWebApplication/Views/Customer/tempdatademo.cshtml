
@{
    ViewData["Title"] = "tempdatademo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>TempDataDemo</h1>


<h1>@TempData["Message"]</h1>
<p>
    There are @TempData["CustomerCount"] customers added to the list.
</p>

<ul>
    @foreach (var item in TempData["CustomerList"] as List<Customer>)
    {
        <li>@item.Id - @item.Name - @item.Address</li>
    }
</ul>

@{
    TempData.Keep("Message");
}
<a asp-action="method2" asp-controller="Customer"> Go to method 2</a>
/* tag helper */